<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/rounded_edittext.xml -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/Gray"/>
                    <!-- alttan gölge -->
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="5px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#0000FE"
                        android:endColor="#0000FE"
                        android:angle="270" />
                    <corners
                        android:radius="2dp"/>
                    <padding
                        android:left="5dp"
                        android:top="2dp"
                        android:right="5dp"
                        android:bottom="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#ffffff"/>
                    <corners android:radius="2dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#0000fe"
                        android:endColor="#0000fe"
                        android:angle="270" />
                    <corners
                        android:radius="8dp"/>
                    <padding
                        android:left="5dp"
                        android:top="2dp"
                        android:right="5dp"
                        android:bottom="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>