<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paymentsdk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Full width -->
        <item name="android:layout_width">fill_parent</item>
        <!-- Null window background kills surrounding padding -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="fontFamily">@font/proxima_nova</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="fontFamily">@font/proxima_nova</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/TopHeading</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Label</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="LabelBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="LabelFooter">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/PayableText</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="LabelFooterBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/PayableText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="LabelPayNow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/PaynowText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="LabelSuccess">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/TopHeading</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="Bold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EditTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/roundtextbox</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
        <item name="android:textColor">@color/EditText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextView1">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/roundtextbox</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
        <item name="android:textColor">@color/EditText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextCVV">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
        <item name="android:textColor">@color/EditText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/roundtextbox</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/Gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>